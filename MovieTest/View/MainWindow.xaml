<Window x:Class="MovieTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <!-- ======= Tema & Styles ======= -->
    <Window.Resources>
        <SolidColorBrush x:Key="Col.Bg"     Color="#0F1420"/>
        <SolidColorBrush x:Key="Col.Card"   Color="#151B2B"/>
        <SolidColorBrush x:Key="Col.Stroke" Color="#2A3550"/>
        <SolidColorBrush x:Key="Col.Text"   Color="#E6EAF3"/>
        <SolidColorBrush x:Key="Col.Sub"    Color="#AAB3C7"/>
        <SolidColorBrush x:Key="Col.Accent" Color="#4F8CFF"/>
        <SolidColorBrush x:Key="Col.AccentDim" Color="#274E99"/>

        <Style x:Key="ContentContainer" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Col.Card}"/>
            <Setter Property="BorderBrush"  Value="{StaticResource Col.Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Background" Value="{StaticResource Col.Card}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Accent}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource Col.Text}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource Col.AccentDim}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="{StaticResource Col.Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Accent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6AA1FF"/>
                    <Setter Property="BorderBrush" Value="#6AA1FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource Col.AccentDim}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Col.AccentDim}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource Col.Card}"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource Col.Card}"/>
            <Setter Property="AlternatingRowBackground" Value="#0F1A2E"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#24304A"/>
            <Setter Property="VerticalGridLinesBrush" Value="#24304A"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="ColumnHeaderHeight" Value="44"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1C2439"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="BorderBrush"  Value="#24304A"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,0,6,0"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0,6,0"/>
        </Style>
    </Window.Resources>

    <!-- ======= Layout ====== -->
    <Grid Background="{StaticResource Col.Bg}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>

        <!-- Topnavigation -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="24,20,24,0">
            <!-- TODO bind 2/3: Command={Binding NavigateToMoviesCommand} -->
            <Button Style="{StaticResource NavButtonStyle}"
                Content="Film"
                Command="{Binding ShowMoviesCommand}"
                Margin="0,0,14,0"/>

            <!-- TODO bind 2/3: Command={Binding NavigateToShowtimesCommand} [Prepped til Scenarie 2/3] -->
            <Button Style="{StaticResource NavButtonStyle}"
                Content="Forestilling­er"
                Command="{Binding ShowCinemaShowingsCommand}"/>
        </StackPanel>

        <!-- Dette er det store felt, som ændrer sig afhængigt af om det er Film eller Forestillinger der er trykket på.  -->
        <Border Grid.Row="2" Margin="24,0" Style="{StaticResource ContentContainer}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Film i systemet"
                       Foreground="{StaticResource Col.Sub}"
                       FontSize="14" />

                <!-- TODO bind 1: ItemsSource={Binding Movies} //// Fjernet SelectionChanged="DataGrid_SelectionChanged" -->
                <DataGrid x:Name="MainDataGrid" ItemsSource="{Binding CurrentData}" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True"></DataGrid>
            </Grid>
        </Border>

        <!-- Knap-sektion i bunden -->
        <Grid Grid.Row="4" Margin="24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- 50% -->
                <ColumnDefinition Width="*"/>
                <!-- 50% -->
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
            Style="{StaticResource PrimaryButtonStyle}"
            Content="Tilføj film"
            Padding="20,10"
            Margin="0,5,8,5"
            Command="{Binding AddMovieCommand}"/>

            <Button Grid.Column="1"
            Style="{StaticResource PrimaryButtonStyle}"
            Content="Tilføj forestilling"
            Padding="20,10"
            Margin="8,5,0,5"
            Command="{Binding AddCinemaShowingCommand}"/>
        </Grid>
    </Grid>
</Window>


