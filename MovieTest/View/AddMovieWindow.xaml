<Window x:Class="MovieTest.AddMovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tilføj film"
        Height="400"
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">

    <!-- ======= Tema & Styles ======= -->
    <Window.Resources>
        <SolidColorBrush x:Key="Col.Bg"     Color="#0F1420"/>
        <SolidColorBrush x:Key="Col.Card"   Color="#151B2B"/>
        <SolidColorBrush x:Key="Col.Stroke" Color="#2A3550"/>
        <SolidColorBrush x:Key="Col.Text"   Color="#E6EAF3"/>
        <SolidColorBrush x:Key="Col.Sub"    Color="#AAB3C7"/>
        <SolidColorBrush x:Key="Col.Accent" Color="#4F8CFF"/>
        <SolidColorBrush x:Key="Col.AccentDim" Color="#274E99"/>

        <Style x:Key="ContentContainer" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Col.Card}"/>
            <Setter Property="BorderBrush"  Value="{StaticResource Col.Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Background" Value="{StaticResource Col.Card}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Accent}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource Col.Text}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource Col.AccentDim}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="{StaticResource Col.Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Accent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6AA1FF"/>
                    <Setter Property="BorderBrush" Value="#6AA1FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource Col.AccentDim}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Col.AccentDim}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource Col.Card}"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource Col.Card}"/>
            <Setter Property="AlternatingRowBackground" Value="#0F1A2E"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#24304A"/>
            <Setter Property="VerticalGridLinesBrush" Value="#24304A"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="ColumnHeaderHeight" Value="44"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1C2439"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="BorderBrush"  Value="#24304A"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,0,6,0"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0,6,0"/>
        </Style>
    </Window.Resources>

    <!-- ======= Layout ======= -->
    <Grid Background="{StaticResource Col.Bg}">
        <Border Margin="20" Style="{StaticResource ContentContainer}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Title -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/> <!-- Genre -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/> <!-- Duration -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/> <!-- Instructor -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/> <!-- Premiere -->
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="Auto"/> <!-- Buttons -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Titel -->
                <TextBlock Text="Titel:" Grid.Row="0" Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="0,4,12,4"
                    FontSize="16"
                    Foreground="{StaticResource Col.Text}"/>
                <Border Grid.Row="0" Grid.Column="1"
                    Background="{StaticResource Col.Bg}"
                    BorderBrush="{StaticResource Col.Stroke}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="4">
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                        Background="Transparent"
                        Foreground="{StaticResource Col.Text}"
                        BorderThickness="0"
                        FontSize="16"/>
                </Border>

                <!-- Genre -->
                <TextBlock Text="Genre:" Grid.Row="2" Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="0,4,12,4"
                    FontSize="16"
                    Foreground="{StaticResource Col.Text}"/>
                <Border Grid.Row="2" Grid.Column="1"
                    Background="{StaticResource Col.Bg}"
                    BorderBrush="{StaticResource Col.Stroke}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="4">
                    <TextBox Text="{Binding Genre, UpdateSourceTrigger=PropertyChanged}"
                        Background="Transparent"
                        Foreground="{StaticResource Col.Text}"
                        BorderThickness="0"
                        FontSize="16"/>
                </Border>

                <!-- Varighed -->
                <TextBlock Text="Varighed:" Grid.Row="4" Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="0,4,12,4"
                    FontSize="16"
                    Foreground="{StaticResource Col.Text}"/>
                <Border Grid.Row="4" Grid.Column="1"
                    Background="{StaticResource Col.Bg}"
                    BorderBrush="{StaticResource Col.Stroke}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="4">
                    <TextBox Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}"
                        Background="Transparent"
                        Foreground="{StaticResource Col.Text}"
                        BorderThickness="0"
                        FontSize="16"
                        ToolTip="Skriv fx 01:45"/>
                </Border>

                <!-- Instruktør -->
                <TextBlock Text="Instruktør:" Grid.Row="6" Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="0,4,12,4"
                    FontSize="16"
                    Foreground="{StaticResource Col.Text}"/>
                <Border Grid.Row="6" Grid.Column="1"
                    Background="{StaticResource Col.Bg}"
                    BorderBrush="{StaticResource Col.Stroke}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="4">
                    <TextBox Text="{Binding Instructor, UpdateSourceTrigger=PropertyChanged}"
                        Background="Transparent"
                        Foreground="{StaticResource Col.Text}"
                        BorderThickness="0"
                        FontSize="16"
                        ToolTip="Skriv fx 01:45"/>
                </Border>

                <!-- Premiere -->
                <TextBlock Text="Premiere:" Grid.Row="8" Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="0,4,12,4"
                    FontSize="16"
                    Foreground="{StaticResource Col.Text}"/>
                <Border Grid.Row="8" Grid.Column="1"
                    Background="{StaticResource Col.Bg}"
                    BorderBrush="{StaticResource Col.Stroke}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="4">
                    <TextBox Text="{Binding MoviePremiere, UpdateSourceTrigger=PropertyChanged}"
                        Background="Transparent"
                        Foreground="{StaticResource Col.Text}"
                        BorderThickness="0"
                        FontSize="16"/>
                </Border>

                <!-- Knapper -->
                <StackPanel Orientation="Horizontal"
                            Grid.Row="10"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0">
                    <Button Content="OK"
                            Width="120"
                            Height="38"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding ConfirmCommand}"
                            IsDefault="True"
                            Margin="0,0,12,0"/>
                    <Button Content="Annuller"
                            Width="120"
                            Height="38"
                            Style="{StaticResource NavButtonStyle}"
                            Command="{Binding CancelCommand}"
                            IsCancel="True"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
